<aura:component description="MB_Movie_Tile" implements="force:appHostable,flexipage:availableForAllPageTypes"
                access="global">

    <aura:attribute name="movie" type="Object"/>
    <aura:registerEvent name="movieSelect" type="c:MB_Movie_Selected_Event"/>

    <aura:if isTrue="{!equals(v.movie.fbtype, 'Black List')}">

        <lightning:button class="image" onclick="{!c.onSelect}">
            <lightning:card class="slds_card">

                <img src="{!if(not(empty(v.movie.poster_path)),'https://image.tmdb.org/t/p/w342/' + v.movie.poster_path,
                        'https://britenet-b-dev-ed--c.documentforce.com/servlet/servlet.FileDownload?file=015090000009mrg')}"
                     width="200"/>


                <p class="title">{!v.movie.title}</p>
                <p class="tileInfo">{!v.movie.character}</p>
                <p class="tileInfo">{!if(empty(v.movie.character), 'TMDb Rating: ' + v.movie.vote_average,'')}</p>

                <div class="icon">
                    <h1>
                        <lightning:icon class="red" iconName="utility:ban" size="small"/>
                    </h1>
                </div>
            </lightning:card>
        </lightning:button>


        <aura:set attribute="else">

            <lightning:button class="image" onclick="{!c.onSelect}">
                <lightning:card class="slds_card">

                    <img src="{!if(not(empty(v.movie.poster_path)),'https://image.tmdb.org/t/p/w342/' + v.movie.poster_path,
                            'https://britenet-b-dev-ed--c.documentforce.com/servlet/servlet.FileDownload?file=015090000009mrg')}"
                         width="200"/>

                    <p class="title">{!v.movie.title}</p>
                    <p class="tileInfo">{!v.movie.character}</p>
                    <p class="tileInfo">{!if(empty(v.movie.character), 'TMDb Rating: ' + v.movie.vote_average,'')}</p>

                    <aura:if isTrue="{!equals(v.movie.fbtype, 'Favorite')}">
                        <div class="icon">
                            <h1>
                                <lightning:icon class="yellow" iconName="utility:favorite" size="small"/>
                            </h1>
                        </div>
                    </aura:if>


                </lightning:card>
            </lightning:button>

        </aura:set>

    </aura:if>

</aura:component>