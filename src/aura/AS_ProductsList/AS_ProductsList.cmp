<aura:component description="AS_ProductsList" controller="AS_App_Controller"
                implements="forceCommunity:layout,
                flexipage:availableForAllPageTypes,
                forceCommunity:availableForAllPageTypes,
                force:appHostable"
                access="global">


    <aura:attribute name="apparel" type="Object[]"/>
    <aura:attribute name="subheader" type="String"/>
<!--    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>-->

    <!-- PRODUCTS LIST -->
    <p class="subheader" style="font-weight: bold; margin-bottom: 40px; margin-top: 20px;">{!v.subheader}</p>

    <div class="mainContainer">
        <lightning:layout multipleRows="true" horizontalAlign="center">

            <aura:iteration items="{!v.apparel}" var="item">
                <lightning:layoutItem>
                    <c:AS_ProductTile product="{!item}"/>
                </lightning:layoutItem>
            </aura:iteration>

        </lightning:layout>
    </div>

</aura:component>
